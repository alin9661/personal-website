# PNPM Configuration for optimal performance
# Strict peer dependencies to catch issues early
strict-peer-dependencies=true

# Auto-install peer dependencies
auto-install-peers=true

# Use the lockfile
lockfile=true

# Don't hoist packages (better for monorepos)
shamefully-hoist=false

# Public hoisting patterns (if needed for specific tools)
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*

# Store location for CI caching
store-dir=~/.pnpm-store

# Network concurrency
network-concurrency=16

# Prefer offline mode (use cached packages when possible)
prefer-offline=true